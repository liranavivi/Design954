{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MassTransit": "Information",
      "MongoDB": "Information"
    }
  },
  "AllowedHosts": "*",
  "ManagerConfiguration": {
    "Version": "1.0.0",
    "Name": "StepManager",
    "Description": "Manager for step entities and operations"
  },
  "MongoDB": {
    "DatabaseName": "ManagerStepDB",
    "MaxConnectionPoolSize": 100,
    "ConnectTimeout": "30s",
    "ServerSelectionTimeout": "30s",
    "SocketTimeout": "30s"
  },

  "RabbitMQ": {
    "VirtualHost": "/",
    "RetryLimit": 3,
    "RetryInterval": "00:00:30",
    "PrefetchCount": 16,
    "ConcurrencyLimit": 10
  },
  "Kafka": {
  },
  "OpenTelemetry": {
    "UseConsoleExporter": true,
    "ServiceName": "StepManager",
    "ServiceVersion": "1.0.0"
  },
  "HealthChecks": {
    "UI": {
      "EvaluationTimeInSeconds": 10,
      "MinimumSecondsBetweenFailureNotifications": 60
    }
  },
  "Features": {
    "ReferentialIntegrityValidation": true
  },
  "ReferentialIntegrity": {
    "EnableParallelValidation": true,
    "ValidateAssignmentReferences": true,
    "ValidateWorkflowReferences": true,
    "ValidateProcessorReferences": true
  }
}
